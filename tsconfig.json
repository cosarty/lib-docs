{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
    "paths": {
      "@/*": [
        "./libs/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
